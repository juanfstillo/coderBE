
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Product Detail</h2>
                <form>
                    <div class="form-group">
                        <label for="title">Product Name:</label>
                        {{{product.title}}}
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        {{{product.description}}}
                    </div>
                    <div class="form-group">
                        <label for="code">Code:</label>
                        {{{product.code}}}
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        {{{product.price}}}
                    </div>
                    <div class="form-group">
                        <label for="price">Stock:</label>
                         {{{product.stock}}}
                    </div>

                    <div class="form-group">
                        <label for="thumbnails">Picture:</label>
                        <img src="/uploads/{{product.thumbnails}}" alt="Image" width="50">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">Buy</button>
                </form>
            </div>
        </div>
    </div>

